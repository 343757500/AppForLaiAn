<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_mine"
    android:gravity="center"
    >

 <RelativeLayout
     android:id="@+id/re_image"
     android:gravity="center"
     android:layout_width="match_parent"
     android:layout_height="wrap_content">

   <ImageView
       android:id="@+id/image"
       android:layout_marginTop="10dp"
       android:src="@drawable/admin"
       android:layout_width="100dp"
       android:layout_height="100dp" />
 </RelativeLayout>


 <LinearLayout
     android:id="@+id/ll_mine"
     android:layout_below="@id/re_image"
     android:orientation="vertical"
     android:layout_width="match_parent"
     android:layout_height="match_parent">

    <TextView
        android:id="@+id/personal_information"
        style="@style/MineEdit"
        android:text="个人信息"/>

    <TextView
        android:id="@+id/information_change"
        style="@style/MineEdit"
        android:text="信息修改"
        />

    <TextView
        android:id="@+id/password_change"
        style="@style/MineEdit"
        android:text="密码修改"
     />

     <mehdi.sakout.fancybuttons.FancyButton
         android:id="@+id/fb_logout"
         android:background="@color/window_background"
         android:layout_width="match_parent"
         android:layout_height="45dp"
         android:layout_marginTop="10dp"
         android:layout_alignParentBottom="true"
         app:fb_text="退出登录"
         app:fb_textColor="@color/white"
         app:fb_defaultColor="@color/color_red"
         app:fb_focusColor="@color/color_backround"/>

 </LinearLayout>


    <FrameLayout
        android:id="@+id/contain_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</RelativeLayout>
