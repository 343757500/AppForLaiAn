<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_mine"
    android:gravity="center"
    >

 <RelativeLayout
     android:id="@+id/re_image"
     android:gravity="center"
     android:layout_width="match_parent"
     android:layout_height="150dp"
     android:background="@mipmap/my">

   <ImageView
       android:id="@+id/image"
       android:layout_marginTop="10dp"
       android:src="@mipmap/touxiang"
       android:layout_width="100dp"
       android:layout_height="100dp" />
 </RelativeLayout>


 <LinearLayout
     android:id="@+id/ll_mine"
     android:layout_below="@id/re_image"
     android:orientation="vertical"
     android:layout_width="match_parent"
     android:layout_height="match_parent">

     <TextView
         android:id="@+id/information_change"
         style="@style/MineEditSetting"
         android:text="信息修改"
         />

     <TextView
         android:id="@+id/personal_information"
         style="@style/MineEdit"
         android:text="个人信息"/>

     <TextView
         android:id="@+id/personal_clearcache"
         style="@style/MineEditClear"
         android:text="清理缓存"/>

     <TextView
         android:id="@+id/personal_about"
         style="@style/MineEditAbout"
         android:text="关于我们"/>

     <TextView
         android:id="@+id/information"
         style="@style/MineEditInfo"
         android:text="版本信息"/>




     <cn.meiqu.baseproject.view.RippleView
         android:layout_gravity="center_horizontal"
         android:id="@+id/fb_logout"
         android:layout_width="150dp"
         android:background="@drawable/bt_login"
         android:layout_height="40dp"
         android:layout_marginTop="15dp">

         <TextView
             android:layout_width="fill_parent"
             android:layout_height="fill_parent"

             android:gravity="center"
             android:text="退出登录"
             android:textColor="@color/white"
             android:textSize="20dp" />
     </cn.meiqu.baseproject.view.RippleView>


 </LinearLayout>

